# =============================================================================
# Bybit Trading Bot - Environment Variables
# =============================================================================
# Copy this file to .env and fill in your values

# =============================================================================
# Database Configuration
# =============================================================================
DATABASE_URL=postgresql+asyncpg://bot_user:changeme@localhost:5432/bybit_bot

# Docker-specific DB settings (used by docker-compose)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=bybit_bot
DB_USER=bot_user
DB_PASSWORD=changeme

# =============================================================================
# Bybit API Configuration
# =============================================================================
# Get your API keys from: https://www.bybit.com/app/user/api-management
BYBIT_API_KEY=your_api_key_here
BYBIT_API_SECRET=your_api_secret_here

# Set to 'true' to use Bybit testnet (recommended for development)
BYBIT_TESTNET=false

# =============================================================================
# CoinMarketCap API (for market cap data)
# =============================================================================
# Get your API key from: https://pro.coinmarketcap.com/
CMC_API_KEY=your_cmc_api_key_here

# =============================================================================
# Telegram Bot Configuration
# =============================================================================
# Create a bot via @BotFather and get the token
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# Your Telegram chat/channel ID for notifications
TELEGRAM_CHAT_ID=your_chat_id_here

# =============================================================================
# Market Universe Settings
# =============================================================================
# Minimum market cap in USD to include a coin (default: $1,000,000)
MIN_MARKET_CAP_USD=1000000

# How often to refresh the coin list in seconds (default: 1 hour)
UNIVERSE_REFRESH_INTERVAL=3600

# =============================================================================
# Market Data Settings
# =============================================================================
# How many days of candle history to keep (default: 5)
CANDLE_HISTORY_DAYS=5

# How often to clean old candles in minutes (default: 60)
CANDLE_CLEANUP_INTERVAL=60

# WebSocket reconnect delay in seconds (default: 5)
WS_RECONNECT_DELAY=5

# =============================================================================
# Strategy Settings
# =============================================================================
# Volume spike threshold multiplier (default: 1.5 = 150% of max historical)
VOLUME_SPIKE_MULTIPLIER=1.5

# Minimum price change percentage to trigger entry (default: 1.0%)
MIN_PRICE_CHANGE_PCT=1.0

# Moving average period for exit signals (default: 14)
MA_EXIT_PERIOD=14

# =============================================================================
# Risk Management
# =============================================================================
# Percentage of available balance per trade (default: 1.0%)
RISK_PER_TRADE_PCT=1.0

# Maximum number of simultaneous open positions (default: 5)
MAX_POSITIONS=5

# Minimum trade amount in USDT (default: 10)
MIN_TRADE_AMOUNT_USDT=10

# =============================================================================
# Logging
# =============================================================================
# Log level: DEBUG, INFO, WARNING, ERROR (default: INFO)
LOG_LEVEL=INFO

# Path to log files (default: ./logs)
LOG_PATH=./logs
